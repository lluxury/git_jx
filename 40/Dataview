TABLE WITHOUT ID
  file.link                       AS "标题",
  dateformat(date,"yyyy-MM-dd")   AS "发布日期",
  category                        AS "专辑",
  choice(draft,"🚧","✅")     AS "状态",
  tags                            AS "标签",
  series                          AS "系列",
  series_order                    AS "系列序号"
FROM ""                           
WHERE draft = false
SORT  published DESC,
  series,
  series_order ASC,
  date DESC


