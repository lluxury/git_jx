TABLE WITHOUT ID
  file.link                       AS "标题",  
  dateformat(date,"yyyy-MM-dd")   AS "发布日期",  
  category                        AS "专辑",  
  choice(draft,"🚧","✅")     AS "状态"
FROM ""                           
WHERE draft = true
SORT
  published DESC,
  series,
  series_order ASC,         



